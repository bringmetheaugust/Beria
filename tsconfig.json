{
	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
		"module": "commonjs",
		"sourceMap": true,
		"lib": ["esnext", "dom"],
		"strict": true,
		"target": "es2017",
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "Node"
	},
	"exclude": ["node_modules", "dist", "test", ".vscode", "mocks"]
}
